# Theme
theme = Catppuccin Mocha

# Font
font-family = JetBrainsMono Nerd Font

# Cursor
cursor-style = block
shell-integration-features = no-cursor

# Window size
maximize = true

# Keybindings

# Change split focus
keybind = shift+alt+left=goto_split:left
keybind = shift+alt+right=goto_split:right
keybind = shift+alt+up=goto_split:top
keybind = shift+alt+down=goto_split:bottom
